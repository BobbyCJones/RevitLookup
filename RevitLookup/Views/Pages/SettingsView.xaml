<rl:UiPage
    x:Class="RevitLookup.Views.Pages.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:rl="http://revitlookup.com/xaml"
    xmlns:converters="clr-namespace:RevitLookup.ViewModels.Converters"
    xmlns:pages="clr-namespace:RevitLookup.Views.Pages"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="500"
    d:DataContext="{d:DesignInstance pages:SettingsView}">
    <rl:UiPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <rl:ThemesDictionary
                    Theme="Light" />
                <rl:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </rl:UiPage.Resources>
    <VirtualizingStackPanel
        Margin="24"
        IsVirtualizing="True"
        VirtualizationMode="Recycling">
        <rl:CardControl
            Header="Theme"
            Icon="Color24">
            <ComboBox
                MinWidth="150"
                SelectedItem="{Binding ViewModel.CurrentTheme}"
                ItemsSource="{Binding ViewModel.Themes}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Text="{Binding ., Converter={converters:ThemeTypeConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </rl:CardControl>
    </VirtualizingStackPanel>
</rl:UiPage>