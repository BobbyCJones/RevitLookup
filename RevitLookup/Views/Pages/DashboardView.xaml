            <!--             <TextBlock -->
            <!--                 FontWeight="Medium" -->
            <!--                 Text="Event monitor" /> -->
            <!--         </StackPanel> -->
            <!--     </rl:CardAction> -->
            <!-- </Grid> -->
        </StackPanel>
    </rl:DynamicScrollViewer>
</Page>