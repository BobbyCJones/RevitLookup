            <!--     <rl:CardAction -->
            <!--         Grid.Row="0" -->
            <!--         Grid.Column="0" -->
            <!--         Margin="0,0,4,0" -->
            <!--         Icon="DesktopPulse24" -->
            <!--         Command="{Binding  ViewModel.NavigateEventPageCommand}"> -->
