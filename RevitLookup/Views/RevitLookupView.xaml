<rl:UiWindow
    x:Class="RevitLookup.Views.RevitLookupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:rl="http://revitlookup.com/xaml"
    xmlns:pages="clr-namespace:RevitLookup.Views.Pages"
    xmlns:markup="clr-namespace:RevitLookup.Views.Markup"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="500"
    MinWidth="630"
    MinHeight="380"
    ExtendsContentIntoTitleBar="True"
    WindowBackdropType="Mica"
    WindowStartupLocation="CenterScreen">
    <rl:UiWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <markup:ThemesDictionary />
                <rl:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </rl:UiWindow.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <rl:NavigationCompact
            x:Name="RootNavigation"
            Grid.Column="0"
            Frame="{Binding ElementName=RootFrame}">
            <rl:NavigationCompact.Items>
                <rl:NavigationItem
                    PageType="{x:Type pages:DashboardView}"
                    Content="Dashboard"
                    Icon="AppGeneric24" />
                <rl:NavigationItem
                    PageType="{x:Type pages:SnoopView}"
                    Content="Snoop summary"
                    Icon="SlideSearch24" />
            </rl:NavigationCompact.Items>
            <rl:NavigationCompact.Footer>
                <rl:NavigationItem
                    PageType="{x:Type pages:SettingsView}"
                    Content="Settings"
                    Icon="Settings24" />
                <rl:NavigationItem
                    PageType="{x:Type pages:AboutView}"
                    Content="About"
                    Icon="Info24" />
            </rl:NavigationCompact.Footer>
        </rl:NavigationCompact>
        <Grid
            Grid.Column="1">
            <Border
                Margin="0,46,0,0"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                CornerRadius="8,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition
                            Height="Auto" />
                        <RowDefinition
                            Height="*" />
                    </Grid.RowDefinitions>
                    <Border
                        Grid.Row="0"
                        Padding="20,14"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        BorderThickness="0,0,0,1"
                        CornerRadius="8,0,0,0">
                        <rl:Breadcrumb
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="14"
                            Navigation="{Binding ElementName=RootNavigation}" />
                    </Border>
                    <Frame
                        x:Name="RootFrame"
                        Grid.Row="1"
                        Margin="4,8" />
                </Grid>
            </Border>
        </Grid>
        <rl:Dialog
            x:Name="RootDialog"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            ButtonLeftVisibility="Collapsed" />
        <rl:TitleBar
            Title="RevitLookup"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            UseSnapLayout="True"
            Margin="42,0,0,0" />
    </Grid>
</rl:UiWindow>